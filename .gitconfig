[include]
    path = ~/.gitconfig.private
[user]
    name = hekt
    email = hektorg@gmail.com
[core]
    editor = nano
    pager = less
    excludesfile = ~/.gitignore.global
[color]
    ui = true
[diff]
    compactionHeuristic = true
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
[push]
	default = simple
[alias]
    a = add
    aa = add .
    cm = commit -m
    co = checkout
    cp = cherry-pick
    d = diff
    f = fetch origin
    g = grep
    l = log
    l1 = log -n 10 --oneline --no-merges
    l1m = log -n 10 --oneline
    lp = log -p -1
    rb = rebase
    rb2 = rebase -i HEAD~2
    rb3 = rebase -i HEAD~3
    rb4 = rebase -i HEAD~4
    s = status
